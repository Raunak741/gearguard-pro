<odoo>
    <!-- Maintenance Kanban Board with Priority and Technicians -->
    <record id="view_request_kanban" model="ir.ui.view">
        <field name="name">gearguard.request.kanban</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage" class="o_kanban_small_column" sample="1">
                <field name="stage"/>
                <field name="priority"/>
                <field name="technician_id"/>
                <templates>
                    <!-- 'card' template is mandatory for Odoo 17/19 -->
                    <t t-name="card">
                        <div class="oe_kanban_global_click shadow-sm border-0 mb-2 p-3">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title" style="font-size: 1.1em;">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <span class="badge rounded-pill bg-info-light text-info mb-2">
                                    <i class="fa fa-wrench mr-1"/> <field name="equipment_id"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom d-flex justify-content-between align-items-center mt-2 pt-2 border-top">
                                <div class="oe_kanban_bottom_left text-muted font-italic">
                                    <field name="request_date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Equipment List View with Health Progress Bar -->
    <record id="view_equipment_list" model="ir.ui.view">
        <field name="name">gearguard.equipment.list</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <list decoration-danger="not is_usable" decoration-warning="health_score &lt; 50">
                <field name="name"/>
                <field name="serial_no"/>
                <field name="department"/>
                <field name="health_score" widget="progressbar" string="Health %"/>
                <field name="total_cost" sum="Total Investment"/>
                <field name="is_usable" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Professional Equipment Form with Health Gauge and Chatter -->
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Status bar can be added here if needed for more complex flows -->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance" type="object" class="oe_stat_button" icon="fa-history">
                            <field name="maintenance_count" widget="statinfo" string="Repairs"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. CNC Milling Machine"/></h1>
                    </div>
                    <group>
                        <group string="Asset Details">
                            <field name="serial_no"/>
                            <field name="department"/>
                            <field name="health_score" widget="gauge" options="{'max_field': '100', 'style': 'width:160px; height: 120px;'}"/>
                        </group>
                        <group string="Maintenance Settings">
                            <field name="team_id"/>
                            <field name="technician_id" widget="many2one_avatar_user"/>
                            <field name="is_usable" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
                <!-- Chatter: Adds social interaction, activities, and logs -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Window Actions -->
    <record id="action_requests" model="ir.actions.act_window">
        <field name="name">Repair Operations</field>
        <field name="res_model">gearguard.request</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Asset Health Center</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Navigation Menus -->
    <menuitem id="menu_gearguard_root" name="GearGuard Pro" sequence="1"/>
    
    <menuitem id="menu_gearguard_ops" name="Operations" parent="menu_gearguard_root" sequence="10"/>
    <menuitem id="menu_gearguard_req" name="Repair Board" parent="menu_gearguard_ops" action="action_requests" sequence="10"/>
    
    <menuitem id="menu_gearguard_config" name="Asset Management" parent="menu_gearguard_root" sequence="100"/>
    <menuitem id="menu_gearguard_equip" name="Equipment" parent="menu_gearguard_config" action="action_equipment" sequence="10"/>
</odoo>